<div class="section">
<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :date, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :user_no, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>
  <%= f.button :submit, @post.new_record? ? 'Create new Event' : 'Update Event', class: "button is-primary" %>
<% end %>
</div>